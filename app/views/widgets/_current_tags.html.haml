-unless self.current_tags.empty?
  %aside.tag-list
    -self.current_tags.each do |tag|
      %span.tag{:class => "tag_#{h(tag)}"}
        = link_to h(tag), tag_path(:id => tag), :rel => "tag", :title => t("questions.tags.tooltip", :tag => tag)
        -tags = (self.current_tags - [tag])
        -if tags.empty?
          = link_to "-", tag_path(:id => self.current_tags.join("+")), :class => "remove_tag"
        -else
          = link_to "-", tag_path(:id => tags.join("+")), :class => "remove_tag"
